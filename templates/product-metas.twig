<div id="HGeS_product_tab_options" class="panel woocommerce_options_panel">
    <p class="form-field">
        <label for="{{ hgesProductMeta('NUMBER_OF_BOTTLE') }}">{{ translate('Number of bottle') }}</label>
        <input
            type="number"
            class="short"
            id="{{ hgesProductMeta('NUMBER_OF_BOTTLE') }}"
            name="{{ hgesProductMeta('NUMBER_OF_BOTTLE') }}"
            value="{{ productMeta[hgesProductMeta('NUMBER_OF_BOTTLE')] }}"
            min="1"
            step="1"
        />
        <span class="description">{{ translate('Quantity of bottle per product') }}</span>
    </p>

    <p class="form-field">
        <label for="{{ hgesProductMeta('TYPE') }}">{{ translate('Type') }}</label>
        <select id="{{ hgesProductMeta('TYPE') }}" name="{{ hgesProductMeta('TYPE') }}" class="short">
            <option value="" >{{ translate('Select a type') }}</option>
            <option value="still" {{ productMeta[hgesProductMeta('TYPE')] == 'still' ? 'selected' : '' }}>{{ translate('Still wine') }}</option>
            <option value="sparkling" {{ productMeta[hgesProductMeta('TYPE')] == 'sparkling' ? 'selected' : '' }}>{{ translate('Sparkling wine') }}</option>
            <option value="spirit" {{ productMeta[hgesProductMeta('TYPE')] == 'spirit' ? 'selected' : '' }}>{{ translate('Spirit') }}</option>
            <option value="nonAlcoholic" {{ productMeta[hgesProductMeta('TYPE')] == 'nonAlcoholic' ? 'selected' : '' }}>{{ translate('Non Alcoholic') }}</option>
        </select>
    </p>

    <p class="form-field wine-form-field">
        <label for="{{ hgesProductMeta('COLOR') }}">{{ translate('Color') }}</label>
        <select id="{{ hgesProductMeta('COLOR') }}" name="{{ hgesProductMeta('COLOR') }}" class="short">
            <option value="" >{{ translate('Select a color') }}</option>
            <option value="red" {{ productMeta[hgesProductMeta('COLOR')] == 'red' ? 'selected' : '' }}>{{ translate('Red') }}</option>
            <option value="white" {{ productMeta[hgesProductMeta('COLOR')] == 'white' ? 'selected' : '' }}>{{ translate('White') }}</option>
            <option value="rose" {{ productMeta[hgesProductMeta('COLOR')] == 'rose' ? 'selected' : '' }}>{{ translate('Ros√©') }}</option>
            <option value="spirits" {{ productMeta[hgesProductMeta('COLOR')] == 'spirits' ? 'selected' : '' }}>{{ translate('Spirits') }}</option>
            <option value="beer" {{ productMeta[hgesProductMeta('COLOR')] == 'beer' ? 'selected' : '' }}>{{ translate('Beer') }}</option>
        </select>
    </p>

    <p class="form-field">
        <label for="{{ hgesProductMeta('CAPACITY_TYPE') }}">{{ translate('Capacity') }}</label>
        <select id="{{ hgesProductMeta('CAPACITY_TYPE') }}" name="{{ hgesProductMeta('CAPACITY_TYPE') }}" class="short">
            <option value="bottle" {{ productMeta[hgesProductMeta('CAPACITY_TYPE')] == 'bottle' ? 'selected' : '' }}>{{ translate('Standard (750 mL)') }}</option>
            <option value="magnum" {{ productMeta[hgesProductMeta('CAPACITY_TYPE')] == 'magnum' ? 'selected' : '' }}>{{ translate('Magnum (1500 mL)') }}</option>
            <option value="other" {{ productMeta[hgesProductMeta('CAPACITY_TYPE')] == 'other' ? 'selected' : '' }}>{{ translate('Other') }}</option>
        </select>
    </p>

    <p id="custom-capacity-wrapper" class="form-field" style="display: none;">
        <label for="{{ hgesProductMeta('CAPACITY') }}">{{ translate('Custom Capacity') }}</label>
        <input
            type="number"
            class="short"
            id="{{ hgesProductMeta('CAPACITY') }}"
            name="{{ hgesProductMeta('CAPACITY') }}"
            value="{{ productMeta[hgesProductMeta('CAPACITY_TYPE')] == 'other' ? productMeta[hgesProductMeta('CAPACITY')] : '' }}"
            min="50"
            step="5"
        />
    <span class="description">{{ translate('Capacity of a single product (in mL)') }}</span>
    </p>
    
    <p class="form-field wine-form-field">
        <label for="{{ hgesProductMeta('ALCOHOL_PERCENTAGE') }}">{{ translate('Alcohol percentage') }}</label>
        <input
            type="number"
            class="short"
            id="{{ hgesProductMeta('ALCOHOL_PERCENTAGE') }}"
            name="{{ hgesProductMeta('ALCOHOL_PERCENTAGE') }}"
            value="{{ productMeta[hgesProductMeta('ALCOHOL_PERCENTAGE')] }}"
            min="1"
            step="0.1"
        />
    </p>

    <p class="form-field wine-form-field">
        <label for="{{ hgesProductMeta('VINTAGE_YEAR') }}">{{ translate('Vintage Year') }}</label>
        <input
            type="number"
            class="short"
            id="{{ hgesProductMeta('VINTAGE_YEAR') }}"
            name="{{ hgesProductMeta('VINTAGE_YEAR') }}"
            value="{{ productMeta[hgesProductMeta('VINTAGE_YEAR')] }}"
            min="1900"
            max= "{{ 'now'|date('Y') }}"
            step="1"
        />
    </p>

    <p class="form-field wine-form-field">
        <label for="{{ hgesProductMeta('PRODUCING_COUNTRY') }}">{{ translate('Producing country') }}</label>
        <select id="{{ hgesProductMeta('PRODUCING_COUNTRY') }}" name="{{ hgesProductMeta('PRODUCING_COUNTRY') }}" class="short">
            {% for code, country in producingCountries %}
                <option value="{{ code }}" {{ code == productMeta[hgesProductMeta('PRODUCING_COUNTRY')] ? 'selected' : '' }}>
                    {{ country }}
                </option>
            {% endfor %}
        </select>
    </p>

    <p class="form-field wine-form-field">
        <label for="appellation-select-field">{{ translate('Appellation') }}</label>
        <select id="appellation-select-field" data-saved-value="{{ productMeta[hgesProductMeta('APPELLATION')] }}" class="short"></select>
    </p>

    <p class="form-field">
        <label for="appellation-select-field">{{ translate('Appellation') }}</label>
        <textarea name="{{ hgesProductMeta('APPELLATION') }}" id="{{ hgesProductMeta('APPELLATION') }}" />{{ productMeta[hgesProductMeta('APPELLATION')] }}</textarea>
    </p>

    <p class="form-field">
        <label for="appellation-select-field">{{ translate('HS Code') }}</label>
        <input type="text" name="{{ hgesProductMeta('HS_CODE') }}" id="{{ hgesProductMeta('HS_CODE') }}" value="{{ productMeta[hgesProductMeta('HS_CODE')] }}" class="short"/>
    </p>

    <div id="error-container"></div>

</div>